<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    <View 
        android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="50"/>
    <LinearLayout
        android:layout_weight="420"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">
		<View 
		    android:layout_width="fill_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="30"
		    />
		<LinearLayout 
		    android:layout_width="fill_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="200"
	    	android:orientation="horizontal" >
		    <LinearLayout
		        android:layout_width="0dp"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="250"
		    	android:orientation="horizontal" >
		        <LinearLayout 
		            android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="148"
		    		android:orientation="vertical">
		            <View 
			            android:layout_width="fill_parent"
			    		android:layout_height="0dp"
			    		android:layout_weight="41"/>
		            <View 
		                android:id="@+id/googling"
			            android:layout_width="fill_parent"
			    		android:layout_height="0dp"
			    		android:layout_weight="159"
			    		android:background="@drawable/googling_btn_img"/>
		        </LinearLayout>
		        <View 
		            android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="102"/>
		    </LinearLayout>
		     <LinearLayout 
		        android:layout_width="0dp"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="2"
		    	android:orientation="vertical">
		        <View 
			        android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="180"
			    	android:background="#66bebebe"/>
		        <View 
			        android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="20" />
		    </LinearLayout>
		    <View 
		       	android:layout_width="0dp"
		       	android:layout_height="fill_parent"
		    	android:layout_weight="10"/>
		    <LinearLayout 
		        android:layout_width="0dp"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="148"
		    	android:orientation="vertical">
		        <View 
		            android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="46"/>
		        <TextView 
		            android:id="@+id/clock_time"
		            android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:gravity="center"
			    	android:layout_weight="45"
			    	android:textColor="#66bebebe"
			    	android:textStyle="bold"
			    	android:textSize="20dp"
			    	android:text="02:30 PM"/>
		        <View 
		            android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="5"/>
		        <LinearLayout 
		            android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="75"
			    	android:orientation="horizontal">
		            <TextView 
			            android:id="@+id/clock_week_month"
			            android:layout_width="0dp"
				    	android:layout_height="fill_parent"
				    	android:gravity="center|left"
				    	android:layout_weight="130"
				    	android:textSize="12sp"
				    	android:textColor="#66bebebe"
				    	android:text="November Friday"/>
		            <TextView 
			            android:id="@+id/clock_day"
			            android:layout_width="0dp"
				    	android:layout_height="fill_parent"
				    	android:gravity="center"
				    	android:layout_weight="58"
				    	android:textSize="25dp"
				    	android:textStyle="bold"
				    	android:textColor="#66bebebe"
				    	android:text="11"/>
		        </LinearLayout>
		        <View 
		            android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="29"/>
		    </LinearLayout>
		</LinearLayout>
		<View 
		    android:layout_weight="42"
		    android:layout_width="fill_parent"
	   		android:layout_height="0dp"/>
		<LinearLayout 
		    android:layout_weight="38"
		    android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	    	android:orientation="horizontal" >
	    	<View 
		        android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight="177"
			    android:background="@drawable/hadstore_logo"/>
	    	<View 
		        android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight="233"/>
		</LinearLayout>
		<View 
		    android:layout_weight="82"
		    android:layout_width="fill_parent"
	   		android:layout_height="0dp"/>
		<FrameLayout 
		    android:id="@+id/login_visible_view"
		    android:layout_weight="210"
		    android:layout_width="fill_parent"
	    	android:layout_height="0dp">
		    <LinearLayout 
		        android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:orientation="horizontal">
		         <LinearLayout 
			    	android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="135"
		    		android:orientation="vertical">
		            <View
		                android:layout_weight="30"
				    	android:layout_width="fill_parent"
			   			android:layout_height="0dp" />
		            <View
		                android:id="@+id/gift_btn"
		                android:layout_weight="150"
				    	android:layout_width="fill_parent"
			   			android:layout_height="0dp"
			   			android:background="@drawable/gift_btn_img" />
		            <View
		                android:layout_weight="30"
				    	android:layout_width="fill_parent"
			   			android:layout_height="0dp" />
		        </LinearLayout>
		        <View 
		            android:layout_weight="2.5"
				    android:layout_width="0dp"
			   		android:layout_height="fill_parent"/>
		        <LinearLayout 
			    	android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="135"
		    		android:orientation="vertical">
		             <View
		                android:layout_weight="30"
				    	android:layout_width="fill_parent"
			   			android:layout_height="0dp" />
		            <View
		                android:id="@+id/update_btn"
		                android:layout_weight="150"
				    	android:layout_width="fill_parent"
			   			android:layout_height="0dp"
			   			android:background="@drawable/update_btn_img" />
		            <View
		                android:layout_weight="30"
				    	android:layout_width="fill_parent"
			   			android:layout_height="0dp" />
		        </LinearLayout>
		         <View 
		            android:layout_weight="2.5"
				    android:layout_width="0dp"
			   		android:layout_height="fill_parent"/>
		        <LinearLayout 
			    	android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="135"
		    		android:orientation="vertical">
		             <View
		                android:layout_weight="30"
				    	android:layout_width="fill_parent"
			   			android:layout_height="0dp" />
		            <View
		                android:id="@+id/notify_btn"
		                android:layout_weight="150"
				    	android:layout_width="fill_parent"
			   			android:layout_height="0dp"
			   			android:background="@drawable/notify_btn_img" />
		            <View
		                android:layout_weight="30"
				    	android:layout_width="fill_parent"
			   			android:layout_height="0dp" />
		        </LinearLayout>
		    </LinearLayout>
		    <LinearLayout 
		    	android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:orientation="horizontal">
		        <View 
		            android:layout_weight="1"
				    android:layout_width="0dp"
			   		android:layout_height="fill_parent"/>
		        <LinearLayout 
			    	android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="136"
		    		android:layout_gravity="right"
		    		android:orientation="vertical">
		            <View
		                android:layout_width="fill_parent"
		    			android:layout_height="0dp"
		    			android:layout_weight="20" />
		            <LinearLayout   
		                android:layout_width="fill_parent"
		    			android:layout_height="0dp"
		    			android:layout_weight="45"
		    			android:orientation="horizontal">
		    			<View
			                android:layout_width="0dp"
			    			android:layout_height="fill_parent"
			    			android:layout_weight="1"/>
			            <TextView 
			                android:id="@+id/gift_notify"
			                android:layout_width="wrap_content"
			    			android:layout_height="fill_parent"
			    			android:gravity="center"
			    			android:text="1"
			    			android:paddingLeft="6dp"
			    			android:paddingRight="6dp"
			    			android:paddingTop="3dp"
			    			android:paddingBottom="3dp"
			    			android:textColor="#ffffff"
			    			android:visibility="invisible"
			    			android:background="@drawable/flag_img"/>
		            </LinearLayout>
		            <View
		                android:layout_width="fill_parent"
		    			android:layout_height="0dp"
		    			android:layout_weight="145" />
		        </LinearLayout>
		        <LinearLayout 
			    	android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="136"
		    		android:layout_gravity="right"
		    		android:orientation="vertical">
		            <View
		                android:layout_width="fill_parent"
		    			android:layout_height="0dp"
		    			android:layout_weight="20" />
		             <LinearLayout   
		                android:layout_width="fill_parent"
		    			android:layout_height="0dp"
		    			android:layout_weight="45"
		    			android:orientation="horizontal">
		    			<View
			                android:layout_width="0dp"
			    			android:layout_height="fill_parent"
			    			android:layout_weight="1"/>
			            <TextView 
			                android:id="@+id/update_notify"
			                android:layout_width="wrap_content"
			    			android:layout_height="fill_parent"
			    			android:gravity="center"
			    			android:text="111"
			    			android:paddingLeft="6dp"
			    			android:paddingRight="6dp"
			    			android:paddingTop="3dp"
			    			android:paddingBottom="3dp"
			    			android:textColor="#ffffff"
			    			android:visibility="invisible"
			    			android:background="@drawable/flag_img"/>
		            </LinearLayout>
		            <View
		                android:layout_width="fill_parent"
		    			android:layout_height="0dp"
		    			android:layout_weight="145" />
		        </LinearLayout>
		        <LinearLayout 
			    	android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="136"
		    		android:layout_gravity="right"
		    		android:orientation="vertical">
		            <View
		                android:layout_width="fill_parent"
		    			android:layout_height="0dp"
		    			android:layout_weight="20" />
		            <LinearLayout   
		                android:layout_width="fill_parent"
		    			android:layout_height="0dp"
		    			android:layout_weight="45"
		    			android:orientation="horizontal">
		    			<View
			                android:layout_width="0dp"
			    			android:layout_height="fill_parent"
			    			android:layout_weight="1"/>
			            <TextView 
			                android:id="@+id/notify_notify"
			                android:layout_width="wrap_content"
			    			android:layout_height="fill_parent"
			    			android:gravity="center"
			    			android:text="11"
			    			android:paddingLeft="6dp"
			    			android:paddingRight="6dp"
			    			android:paddingTop="3dp"
			    			android:paddingBottom="3dp"
			    			android:textColor="#ffffff"
			    			android:visibility="invisible"
			    			android:background="@drawable/flag_img"/>
		            </LinearLayout>
		            <View
		                android:layout_width="fill_parent"
		    			android:layout_height="0dp"
		    			android:layout_weight="145" />
		        </LinearLayout>
		        <View 
		            android:layout_weight="1"
				    android:layout_width="0dp"
			   		android:layout_height="fill_parent"/>
		    </LinearLayout>
		</FrameLayout>
		<View 
		    android:layout_weight="100"
		    android:layout_width="fill_parent"
	   		android:layout_height="0dp"/>
	</LinearLayout>
	<View 
        android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="20"/>
</LinearLayout>