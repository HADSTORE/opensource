<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    <View
        android:layout_width="0dp"
   		android:layout_height="fill_parent"
   		android:layout_weight="10"
        />
    <LinearLayout 
	    android:layout_width="0dp"
	   	android:layout_height="fill_parent"
	   	android:layout_weight="780"
    	android:orientation="vertical">
    	 <View
	        android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	   		android:layout_weight="10"
	        />
    	<LinearLayout 
		    android:id="@+id/detail_top"
		    android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	   		android:layout_weight="130"
	    	android:orientation="horizontal">
		    <ImageView
		        android:id="@+id/detail_top_img"
		        android:layout_width="0dp"
	   			android:layout_height="fill_parent"
	   			android:layout_weight="130"
	   			android:background="@drawable/list_defimg"
		         />
		    <View
		        android:layout_width="0dp"
	   			android:layout_height="fill_parent"
	   			android:layout_weight="20"
		         />
		    <LinearLayout 
		        android:layout_width="0dp"
	   			android:layout_height="fill_parent"
	   			android:layout_weight="620"
	    		android:orientation="vertical">
		        <LinearLayout 
		            android:layout_width="fill_parent"
	   				android:layout_height="0dp"
	   				android:layout_weight="90"
	    			android:orientation="horizontal">
		            <LinearLayout 
		                android:layout_width="0dp"
	   					android:layout_height="fill_parent"
	   					android:layout_weight="520"
	    				android:orientation="vertical">
		                <TextView 
		                    android:id="@+id/detail_top_title"
		                    android:layout_width="fill_parent"
	   						android:layout_height="0dp"
	   						android:layout_weight="1"
	   						android:textColor="#4D4D4D"
	   						android:text=""
		                    />
		                <TextView 
		                    android:id="@+id/detail_top_nickname"
		                    android:layout_width="fill_parent"
	   						android:layout_height="0dp"
	   						android:layout_weight="1"
	   						android:text=""
		                    />
		            </LinearLayout>
		            <View
		                android:layout_width="0dp"
	   					android:layout_height="fill_parent"
	   					android:layout_weight="10"/>
		           <FrameLayout 
		                android:layout_width="0dp"
	   					android:layout_height="fill_parent"
	   					android:layout_weight="90">
			            <LinearLayout 
			                android:id="@+id/detail_top_install"
			                android:layout_width="fill_parent"
		   					android:layout_height="fill_parent"
		    				android:orientation="vertical">
			                <TextView
			                    android:id="@+id/detail_top_ori_point"
			                    android:layout_width="fill_parent"
		   						android:layout_height="0dp"
		   						android:layout_weight="40"
		   						android:gravity="center"
		   						android:background="#FFC000"
		   						android:textColor="#000000"
			                    />
			                <View 
			                    android:layout_width="fill_parent"
		   						android:layout_height="0dp"
		   						android:layout_weight="5"/>
			                <com.android.hadstore.CustomTextView  
			                    android:id="@+id/detail_top_point"
			                    android:layout_width="fill_parent"
		   						android:layout_height="0dp"
		   						android:layout_weight="40"
		   						android:gravity="center"
		   						android:background="#606060"
		   						android:textColor="#FFFFFF"
		   						android:visibility="invisible"
			                    />
			                 <View 
			                    android:layout_width="fill_parent"
		   						android:layout_height="0dp"
		   						android:layout_weight="5"/>
			            </LinearLayout>
			            <LinearLayout 
			                android:id="@+id/detail_top_del"
			                android:layout_width="fill_parent"
		   					android:layout_height="fill_parent"
		    				android:orientation="vertical"
		    				android:visibility="gone">
			                <TextView
			                    android:id="@+id/detail_top_other_btn"
			                    android:layout_width="fill_parent"
		   						android:layout_height="0dp"
		   						android:layout_weight="40"
		   						android:gravity="center"
		   						android:textColor="#000000"
			                    />
			                <View 
			                    android:layout_width="fill_parent"
		   						android:layout_height="0dp"
		   						android:layout_weight="5"/>
			                <TextView  
			                    android:id="@+id/detail_top_del_percent"
			                    android:layout_width="fill_parent"
		   						android:layout_height="0dp"
		   						android:layout_weight="40"
		   						android:gravity="center"
		   						android:textColor="#FFFFFF"
			                    />
			                 <View 
			                    android:layout_width="fill_parent"
		   						android:layout_height="0dp"
		   						android:layout_weight="5"/>
			            </LinearLayout>
		            </FrameLayout>
		        </LinearLayout>
		        <FrameLayout 
		            android:layout_width="fill_parent"
	   				android:layout_height="0dp"
	   				android:layout_weight="40">
			        <LinearLayout 
			            android:id="@+id/progress_one"
			            android:layout_width="fill_parent"
		   				android:layout_height="fill_parent"
		   				android:orientation="horizontal">
			             <View
			                android:layout_width="0dp"
		   					android:layout_height="fill_parent"
		   					android:layout_weight="330"/>
			             <TextView 
		                    android:id="@+id/detail_top_like"
		                    android:layout_width="0dp"
	   						android:layout_height="fill_parent"
	   						android:layout_weight="90"
	   						android:text="Like"
	   						android:gravity="center"
	   						android:background="#9C9CDF"
	   						android:textColor="#ffffff"
		                    />
			             <View
			                android:layout_width="0dp"
		   					android:layout_height="fill_parent"
		   					android:layout_weight="10"/>
		                <TextView 
		                    android:id="@+id/detail_top_bookmark"
		                    android:layout_width="0dp"
	   						android:layout_height="fill_parent"
	   						android:layout_weight="90"
	   						android:text="즐겨찾기"
	   						android:gravity="center"
	   						android:background="#00B0F0"
	   						android:textColor="#ffffff"
		                    />
		                <View
			                android:layout_width="0dp"
		   					android:layout_height="fill_parent"
		   					android:layout_weight="10"/>
		                <TextView 
		                    android:id="@+id/detail_top_gift"
		                    android:layout_width="0dp"
	   						android:layout_height="fill_parent"
	   						android:layout_weight="90"
	   						android:text="선물하기"
	   						android:gravity="center"
	   						android:background="#C00000"
	   						android:textColor="#ffffff"
		                    />
			        </LinearLayout>
			        <LinearLayout 
			            android:id="@+id/progress_two"
			            android:layout_width="fill_parent"
		   				android:layout_height="fill_parent"
		   				android:orientation="horizontal"
		   				android:visibility="gone">
		               <View
			                android:layout_width="0dp"
		   					android:layout_height="fill_parent"
		   					android:layout_weight="10"/>
		               <LinearLayout 
				            android:layout_width="0dp"
						    android:layout_height="fill_parent"
						    android:layout_weight="600"
			   				android:orientation="vertical">
			   				<View
				                android:layout_width="fill_parent"
			   					android:layout_height="0dp"
			   					android:layout_weight="10"/>
			                <ProgressBar 
				                android:id="@+id/detail_progress"
						        android:layout_width="fill_parent"
						    	android:layout_height="0dp"
						    	android:layout_weight="20"
						    	android:progressDrawable="@android:drawable/progress_horizontal"
						    	android:indeterminate="false"
						    	android:indeterminateOnly="false"/>
			                <View
				                android:layout_width="fill_parent"
			   					android:layout_height="0dp"
			   					android:layout_weight="10"/>
		                </LinearLayout>
		               <View
			                android:layout_width="0dp"
		   					android:layout_height="fill_parent"
		   					android:layout_weight="10"/>
		   				
		            </LinearLayout>
		        </FrameLayout>
		    </LinearLayout>
		</LinearLayout>
		<View
	        android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	   		android:layout_weight="10"
	        />
	    <ScrollView 
	        android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	   		android:layout_weight="200">
		    <LinearLayout 
			    android:layout_width="fill_parent"
		   		android:layout_height="wrap_content"
		    	android:orientation="vertical">
				<LinearLayout 
			        android:id="@+id/detail_spon"
			        android:layout_width="fill_parent"
		   			android:layout_height="wrap_content"
		   			android:orientation="vertical">
			        <TextView
					    android:layout_width="fill_parent"
			   			android:layout_height="wrap_content"
			   			android:text="스폰서"
					    />
					<View
					    android:layout_width="fill_parent"
			   			android:layout_height="1px" 
			   			android:background="#CCCCCC"/>
			    </LinearLayout>
			    <TextView
				    android:layout_width="fill_parent"
		   			android:layout_height="wrap_content"
		   			android:text="     "
				    />
			    <View
				    android:layout_width="fill_parent"
		   			android:layout_height="1px"
		   			android:background="#CCCCCC" />
			    <LinearLayout 
			        android:id="@+id/detail_desc"
			        android:layout_width="fill_parent"
		   			android:layout_height="wrap_content"
		   			android:orientation="vertical">
				    
			        <TextView
			            android:id="@+id/detail_desc_text"
			            android:layout_width="fill_parent"
		   				android:layout_height="wrap_content"/>
			    </LinearLayout>
			    <TextView
				    android:layout_width="fill_parent"
		   			android:layout_height="wrap_content"
		   			android:text="총 점수 세부내역"
				    />
				<View
				    android:layout_width="fill_parent"
		   			android:layout_height="1px" 
		   			android:background="#CCCCCC"/>
			    <LinearLayout 
			        android:id="@+id/detail_total_score"
			        android:layout_width="fill_parent"
		   			android:layout_height="280px"
		   			android:orientation="vertical">
			        <View 
			        	android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="20"/>
			        <LinearLayout 
			        	android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="35"
		   				android:orientation="horizontal">
			            <TextView
				            android:id="@+id/detail_total_score_down"
				            android:layout_width="0dp"
				            android:layout_weight="600"
			   				android:layout_height="fill_parent"
			   				android:textColor="#C00000"
			   				android:gravity="center_vertical"
			   				android:text="다운횟수(x가중%)"/>
			            <TextView
				            android:id="@+id/detail_total_score_down_point"
				            android:layout_width="0dp"
				            android:layout_weight="180"
			   				android:layout_height="fill_parent"
			   				android:textColor="#C00000"
			   				android:gravity="center_vertical"/>
			        </LinearLayout>
			        <LinearLayout 
			        	android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="35"
		   				android:orientation="horizontal">
			            <TextView
				            android:id="@+id/detail_total_score_view"
				            android:layout_width="0dp"
				            android:layout_weight="600"
			   				android:layout_height="fill_parent"
			   				android:textColor="#339933"
			   				android:gravity="center_vertical"
			   				android:text="View횟수(x가중%)"/>
			            <TextView
				            android:id="@+id/detail_total_score_view_point"
				            android:layout_width="0dp"
				            android:layout_weight="180"
			   				android:layout_height="fill_parent"
			   				android:textColor="#339933"
			   				android:gravity="center_vertical"/>
			        </LinearLayout>
			        <LinearLayout 
			        	android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="35"
		   				android:orientation="horizontal">
			            <TextView
				            android:id="@+id/detail_total_score_premium"
				            android:layout_width="0dp"
				            android:layout_weight="600"
			   				android:layout_height="fill_parent"
			   				android:textColor="#7575D1"
			   				android:gravity="center_vertical"
			   				android:text="프리미엄 포인트(x가중%)"/>
			            <TextView
				            android:id="@+id/detail_total_score_premium_point"
				            android:layout_width="0dp"
				            android:layout_weight="180"
			   				android:layout_height="fill_parent"
			   				android:textColor="#7575D1"
			   				android:gravity="center_vertical"/>
			        </LinearLayout>
			         <LinearLayout 
			        	android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="35"
		   				android:orientation="horizontal">
			            <TextView
				            android:id="@+id/detail_total_score_link"
				            android:layout_width="0dp"
				            android:layout_weight="600"
			   				android:layout_height="fill_parent"
			   				android:textColor="#0070D1"
			   				android:gravity="center_vertical"
			   				android:text="Link횟수(x가중%)"/>
			            <TextView
				            android:id="@+id/detail_total_score_link_point"
				            android:layout_width="0dp"
				            android:layout_weight="180"
			   				android:layout_height="fill_parent"
			   				android:textColor="#0070D1"
			   				android:gravity="center_vertical"/>
			        </LinearLayout>
			        <View 
			        	android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="35"/>
			        <LinearLayout 
			        	android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="35"
		   				android:orientation="horizontal">
			            <TextView
				            android:id="@+id/detail_total_score_total"
				            android:layout_width="0dp"
				            android:layout_weight="600"
			   				android:layout_height="fill_parent"
			   				android:textColor="#FF9900"
			   				android:gravity="center_vertical"
			   				android:text="총점수(x가중%)"/>
			            <TextView
				            android:id="@+id/detail_total_score_total_point"
				            android:layout_width="0dp"
				            android:layout_weight="180"
			   				android:layout_height="fill_parent"
			   				android:textColor="#FF9900"
			   				android:gravity="center_vertical"/>
			        </LinearLayout>
			         <View 
			        	android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="20"/>
			    </LinearLayout>
			    <TextView
				    android:layout_width="fill_parent"
		   			android:layout_height="wrap_content"
		   			android:text=" "
				    />
				<View
				    android:layout_width="fill_parent"
		   			android:layout_height="1px" 
		   			android:background="#CCCCCC"/>
				<TextView
				    android:layout_width="fill_parent"
		   			android:layout_height="wrap_content"
		   			android:text=" "
				    />
				<LinearLayout 
			        android:id="@+id/detail_comment"
			        android:layout_width="fill_parent"
		   			android:layout_height="160px"
		   			android:orientation="vertical">
			        <EditText
			            android:id="@+id/detail_comment_edit"
			            android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="100"
		   				android:gravity="center_vertical"
		   				android:background="@drawable/search_bar_back"/>
			        <View
			            android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="10"
			             />
			        <LinearLayout 
				        android:id="@+id/detail_comment"
				        android:layout_width="fill_parent"
			   			android:layout_height="0dp"
			   			android:layout_weight="40"
			   			android:orientation="horizontal">
				         <TextView 
				            android:id="@+id/detail_commet_post"
				            android:layout_width="0dp"
			   				android:layout_height="fill_parent"
			   				android:layout_weight="1"
			   				android:singleLine="true"
	   						android:gravity="center"
	   						android:background="#FFC000"
	   						android:text="Post Your Comment"
	   						android:textColor="#000000"/>
				         <View
				            android:layout_width="0dp"
			   				android:layout_height="fill_parent"
			   				android:layout_weight="1"
				             />
			         </LinearLayout>
			        <View
			            android:layout_width="fill_parent"
		   				android:layout_height="0dp"
		   				android:layout_weight="10"
			             />
		        </LinearLayout>
				<TextView
				    android:id="@+id/detail_comment_view"
				    android:layout_width="fill_parent"
		   			android:layout_height="wrap_content"
		   			android:text="comment ->"
				    />
				<View
				    android:layout_width="fill_parent"
		   			android:layout_height="1px" 
		   			android:background="#CCCCCC"/>
			</LinearLayout>
		</ScrollView>
		<View
	        android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	   		android:layout_weight="54"
	        />
	</LinearLayout>
	<View
       android:layout_width="0dp"
  		android:layout_height="fill_parent"
  		android:layout_weight="10"
       />
</LinearLayout>