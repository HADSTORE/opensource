<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    <View 
        android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="50"/>
    
    <LinearLayout
        android:layout_weight="420"
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">
		<View 
		    android:layout_width="fill_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="30"
		    />
		<LinearLayout 
	   		android:layout_weight="38"
		    android:layout_width="fill_parent"
	   		android:layout_height="0dp"
	    	android:orientation="horizontal" >
		    	<View 
			        android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="177"
				    android:background="@drawable/hadstore_logo"/>
		    	<View 
			        android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="233"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="200"
	    	android:orientation="horizontal" >
		    <LinearLayout
		        android:layout_width="0dp"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="250"
		    	android:orientation="horizontal" >
		        <LinearLayout 
		            android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="148"
		    		android:orientation="vertical">
		            <View 
			            android:layout_width="fill_parent"
			    		android:layout_height="0dp"
			    		android:layout_weight="41"/>
		            <View 
		                android:id="@+id/googling"
			            android:layout_width="fill_parent"
			    		android:layout_height="0dp"
			    		android:layout_weight="159"
			    		android:background="@drawable/notify_btn_img"/>
		        </LinearLayout>
		        <View 
		            android:layout_width="0dp"
		    		android:layout_height="fill_parent"
		    		android:layout_weight="102"/>
		    </LinearLayout>
		     <LinearLayout 
		        android:layout_width="0dp"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="2"
		    	android:orientation="vertical">
		        <View 
			        android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="180"
			    	android:background="#66bebebe"/>
		        <View 
			        android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="20" />
		    </LinearLayout>
		    <View 
		       	android:layout_width="0dp"
		       	android:layout_height="fill_parent"
		    	android:layout_weight="10"/>
		    <LinearLayout 
		        android:layout_width="0dp"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="148"
		    	android:orientation="vertical">
		        <View 
		            android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="46"/>
		        <TextView 
		            android:id="@+id/clock_time"
		            android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:gravity="center"
			    	android:layout_weight="45"
			    	android:textColor="#66bebebe"
			    	android:textStyle="bold"
			    	android:textSize="20dp"
			    	android:text="02:30 PM"/>
		        <View 
		            android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="5"/>
		        <LinearLayout 
		            android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="75"
			    	android:orientation="horizontal">
		            <TextView 
			            android:id="@+id/clock_week_month"
			            android:layout_width="0dp"
				    	android:layout_height="fill_parent"
				    	android:gravity="center|left"
				    	android:layout_weight="130"
				    	android:textSize="12sp"
				    	android:textColor="#66bebebe"
				    	android:text="November Wednesday"/>
		            <TextView 
			            android:id="@+id/clock_day"
			            android:layout_width="0dp"
				    	android:layout_height="fill_parent"
				    	android:gravity="center"
				    	android:layout_weight="58"
				    	android:textSize="25dp"
				    	android:textStyle="bold"
				    	android:textColor="#66bebebe"
				    	android:text="11"/>
		        </LinearLayout>
		        <View 
		            android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="29"/>
		    </LinearLayout>
		</LinearLayout>
		<View 
		    android:layout_weight="30"
		    android:layout_width="fill_parent"
	   		android:layout_height="0dp"/>
		<ListView
	        android:id="@+id/notice_list_listview"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:background="#ffffff"
		    android:scrollbars="none"
		   	android:fadingEdgeLength="0dip"
		   	android:listSelector="@drawable/empty"
		   	android:cacheColorHint="#00000000"
		    android:layout_weight="336" />
		<View 
		    android:layout_weight="5"
		    android:layout_width="fill_parent"
	   		android:layout_height="0dp"/>
		<TextView
   		    android:id="@+id/notice_next_search"
	        android:layout_weight="35"
	        android:layout_height="0dp"
	    	android:layout_width="fill_parent"
	    	android:background="#ffffE13c"
	    	android:textColor="#4D4D4D"
	    	android:gravity="center"
	    	android:text="Next +10"
	    	 />
		<View 
		    android:layout_weight="50"
		    android:layout_width="fill_parent"
	   		android:layout_height="0dp"/>
	</LinearLayout>
	<View 
        android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:layout_weight="20"/>
</LinearLayout>