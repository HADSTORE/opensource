<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="horizontal">
    <View
        android:layout_width="0dp"
    	android:layout_height="fill_parent" 
    	android:layout_weight="20"/>
    <LinearLayout
        android:layout_width="0dp"
    	android:layout_height="fill_parent"
    	android:layout_weight="440"
    	android:orientation="vertical" >
        <TextView 
            android:layout_width="fill_parent"
    		android:layout_height="0dp"
    		android:layout_weight="100"
    		android:textSize="20dp"
    		android:gravity="center_vertical"
    		android:text="로그인"/>
        <View 
            android:layout_width="fill_parent"
    		android:layout_height="0dp"
    		android:layout_weight="2"
    		android:background="#000000"/>
        <View 
            android:layout_width="fill_parent"
    		android:layout_height="0dp"
    		android:layout_weight="10"/>
        <LinearLayout
            android:background="@drawable/option_back"
	        android:layout_width="fill_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="260"
	    	android:orientation="vertical" >
	    	<View 
            	android:layout_width="fill_parent"
    			android:layout_height="0dp"
    			android:layout_weight="15"/>
	    	<LinearLayout
		        android:layout_width="fill_parent"
		    	android:layout_height="0dp"
		    	android:layout_weight="170"
		    	android:orientation="vertical" >
		    	<LinearLayout
			        android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="50"
			    	android:orientation="horizontal" >
			    	<View 
		            	android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="10"/>
			    	<TextView 
			    	    android:layout_width="0dp"
			    		android:layout_height="fill_parent"
			    		android:text="회원 ID"
			    		android:textColor="#00B0F0"
			    		android:gravity="center_vertical"
			    		android:layout_weight="150"/>
			    	<EditText
			    	    android:id="@+id/login_id"
			    	    android:layout_width="0dp"
			    		android:layout_height="fill_parent"
			    		android:gravity="center_vertical"
			    		android:layout_weight="250"
			    		android:background="@drawable/search_bar_back" />
			    	<View 
		            	android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="30"/>
		    	</LinearLayout>
		    	<LinearLayout
			        android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="50"
			    	android:orientation="horizontal" >
			    	<View 
		            	android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="10"/>
			    	<TextView 
			    	    android:layout_width="0dp"
			    		android:layout_height="fill_parent"
			    		android:text="비밀번호"
			    		android:textColor="#00B0F0"
			    		android:gravity="center_vertical"
			    		android:layout_weight="150"/>
			    	<EditText
			    	    android:id="@+id/login_pw"
			    	    android:layout_width="0dp"
			    		android:layout_height="fill_parent"
			    		android:gravity="center_vertical"
			    		android:layout_weight="250"
			    		android:password="true"
			    		android:background="@drawable/search_bar_back" />
			    	<View 
		            	android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="30"/>
		    	</LinearLayout>
		    	<View 
            	android:layout_width="fill_parent"
    			android:layout_height="0dp"
    			android:layout_weight="10"/>
		    	<LinearLayout
			        android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="60"
			    	android:orientation="horizontal" >
			    	<View 
		            	android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="10"/>
			    	<CheckBox 
			    	    android:id="@+id/login_auto"
			    	    android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="180"
		    			android:textColor="#000000"
		    			android:textSize="12dp"
		    			android:gravity="center"
		    			android:text="자동로그인"
			    	    />
			    	<TextView 
			    	    android:id="@+id/login_btn"
			    	    android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="220"
		    			android:gravity="center"
		    			android:textColor="#ffffff"
		    			android:text="로그인"
		    			android:background="#D1D1F0"/>
			    	<View 
		            	android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="30"/>
		    	</LinearLayout>
	    	</LinearLayout>
	    	<View 
            	android:layout_width="fill_parent"
    			android:layout_height="0dp"
    			android:layout_weight="15"/>
	    	<LinearLayout
			        android:layout_width="fill_parent"
			    	android:layout_height="0dp"
			    	android:layout_weight="60"
			    	android:orientation="horizontal" >
		    		<View 
		            	android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="10"/>
			    	<TextView
			    	    android:id="@+id/login_register_btn"
			    	    android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:gravity="center"
				    	android:textColor="#ffffff"
				    	android:text="회원가입"
		    			android:layout_weight="400"
		    			android:background="#D1D1F0" />
			    	<View 
		            	android:layout_width="0dp"
		    			android:layout_height="fill_parent"
		    			android:layout_weight="30"/>
	    	</LinearLayout>
	    	<View 
            	android:layout_width="fill_parent"
    			android:layout_height="0dp"
    			android:layout_weight="10"/>
	    </LinearLayout>
        <View
            android:layout_width="fill_parent"
    		android:layout_height="0dp"
    		android:layout_weight="362" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
    	android:layout_height="fill_parent"
    	android:layout_weight="20" />
</LinearLayout>