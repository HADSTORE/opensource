<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/search_list_view"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <!-- top size 비율 642 -->
		<include layout="@layout/search_option"  android:id="@+id/search_option"/>
		<!-- search size 비율 82 -->
		<LinearLayout 
		    android:id="@+id/search_list_search"
		    android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:orientation="horizontal"
	    	android:background="#FFCB3333">
	    	<LinearLayout 
		        android:id="@+id/login_layout"
		        android:layout_weight="148"
			    android:layout_height="fill_parent"
			    android:layout_width="0dp"
			    android:orientation="horizontal">
			   <View 
			        android:layout_weight="20"
			        android:layout_height="fill_parent"
			    	android:layout_width="0dp"/>
			    <LinearLayout 
			        android:layout_weight="28"
				    android:layout_height="fill_parent"
				    android:layout_width="0dp"
				    android:orientation="vertical">
				    <View 
				        android:layout_weight="21"
				        android:layout_height="0dp"
				    	android:layout_width="fill_parent"/>
				    <View 
				        android:id="@+id/login_icon"
				        android:layout_weight="37"
				        android:layout_height="0dp"
				        android:background="@drawable/login_icon"
				    	android:layout_width="fill_parent"/>
				    <View 
				        android:layout_weight="20"
				        android:layout_height="0dp"
				    	android:layout_width="fill_parent"/>
				</LinearLayout>
				<View
			        android:layout_weight="5"
			        android:layout_height="fill_parent"
			    	android:layout_width="0dp" />
				<LinearLayout 
			        android:layout_weight="95"
				    android:layout_height="fill_parent"
				    android:layout_width="0dp"
				    android:orientation="vertical">
				    <View 
				        android:layout_weight="28"
				        android:layout_height="0dp"
				    	android:layout_width="fill_parent"/>
				    <TextView 
				        android:id="@+id/login_text"
				        android:layout_weight="30"
				        android:layout_height="0dp"
				    	android:layout_width="fill_parent"
				    	android:gravity="center_vertical"
				    	android:textColor="#ffffffff"
				    	android:textSize="10sp"
				    	android:text="로그인"/>
				    <View 
				        android:layout_weight="20"
				        android:layout_height="0dp"
				    	android:layout_width="fill_parent"/>
				</LinearLayout>
			</LinearLayout>
		    <LinearLayout 
		        android:layout_weight="414"
			    android:layout_height="fill_parent"
			    android:layout_width="0dp"
			    android:orientation="vertical">
			     <View 
			        android:layout_weight="13"
			        android:layout_height="0dp"
			    	android:layout_width="fill_parent"/>
			     <LinearLayout
			          android:layout_weight="52"
			    	  android:layout_height="0dp"
			    	  android:layout_width="fill_parent"
			    	  android:orientation="horizontal"
			    	  android:background="@drawable/search_from">
				    	<View 
					        android:layout_weight="55"
					        android:layout_height="fill_parent"
					    	android:layout_width="0dp"/>
				    	<TextView 
				    	    android:id="@+id/search_bar"
					    	android:textColor="#000000"
					    	android:layout_weight="327"
					        android:layout_height="fill_parent"
					    	android:layout_width="0dp"
					    	android:gravity="center_vertical" 
					    	android:text="검색어 또는 URL"/>
				    	<View 
					        android:layout_weight="32"
					        android:layout_height="fill_parent"
					    	android:layout_width="0dp"/>
		    	</LinearLayout>
		    	 <View 
			        android:layout_weight="13"
			        android:layout_height="0dp"
			    	android:layout_width="fill_parent"/>
		    </LinearLayout>
		    <LinearLayout 
		        android:id="@+id/option_btn_layout"
		        android:layout_weight="78"
			    android:layout_height="fill_parent"
			    android:layout_width="0dp"
			    android:orientation="horizontal">
			    <View
			        android:layout_weight="20"
			        android:layout_height="fill_parent"
			    	android:layout_width="0dp" />
			    <LinearLayout 
			        android:layout_weight="35"
				    android:layout_height="fill_parent"
				    android:layout_width="0dp"
				    android:orientation="vertical">
				    <View 
				        android:layout_weight="29"
				        android:layout_height="0dp"
				    	android:layout_width="fill_parent"/>
				    <View 
			    	    android:id="@+id/option_btn"
			    	    android:layout_weight="20"
			    	    android:layout_height="0dp"
			    	    android:background="@drawable/roll_btn_down"
				    	android:layout_width="fill_parent"/>
				    <View 
				        android:layout_weight="29"
				        android:layout_height="0dp"
				    	android:layout_width="fill_parent"/>
				</LinearLayout> 
			    <View
			        android:layout_weight="23"
			        android:layout_height="fill_parent"
			    	android:layout_width="0dp" />
		    </LinearLayout>
		</LinearLayout>
		<!-- middel size 비율 642 -->
		<LinearLayout 
		    android:id="@+id/search_list_bottom"
		    android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:orientation="vertical">
		    <ListView
		        android:id="@+id/search_list_listview"
			    android:layout_width="fill_parent"
			    android:layout_height="0dp"
			    android:background="#ffffff"
			    android:scrollbars="none"
			   	android:fadingEdgeLength="0dip"
			   	android:listSelector="@drawable/empty"
			   	android:cacheColorHint="#00000000"
			   	android:divider="#FFDCDCDC"
			    android:layout_weight="898" />
    		<TextView
    		    android:id="@+id/next_search"
		        android:layout_weight="71"
		        android:layout_height="0dp"
		    	android:layout_width="fill_parent"
		    	android:background="#c7c7c7"
		    	android:textColor="#4D4D4D"
		    	android:gravity="center"
		    	android:text="Next +100"
		    	 />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>