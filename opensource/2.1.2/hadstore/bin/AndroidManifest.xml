<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.hadstore"
    android:versionCode="1"
    android:versionName="@string/app_version" >

    <uses-sdk android:minSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:icon="@drawable/defaultimage"
        android:label="@string/app_name"
        android:name=".HadstroeActivityApplication" >
        <activity
            android:name=".HadstroeActivity"
            android:configChanges="orientation|keyboardHidden" 
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask"
            android:theme="@style/customTitleTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>  
                <category android:name="android.intent.category.DEFAULT"/>  
                <category android:name="android.intent.category.BROWSABLE"/>  
                <data android:scheme="hadstoreapp" android:host="hadstore"/>  
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.hadstore.HDSearchActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.android.hadstore.ExpansionActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.android.hadstore.InAppActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
             <intent-filter>
                <action android:name="android.intent.action.VIEW"/>  
                <category android:name="android.intent.category.DEFAULT"/>  
            </intent-filter>
        </activity>
         <activity
            android:name="com.android.hadstore.AppPaymentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/fullScreenTranslucent"
            android:label="@string/app_name" >
             <intent-filter>
                <action android:name="android.intent.action.VIEW"/>  
                <category android:name="android.intent.category.DEFAULT"/>  
            </intent-filter>
        </activity>
        <service android:name=".DownLoadService">
			<intent-filter>
				<action android:name="com.hadsotre.DOWNSERVICE" />
			</intent-filter>
		</service>
    </application>
	
</manifest>